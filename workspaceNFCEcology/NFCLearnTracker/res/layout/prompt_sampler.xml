<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPromptSampler"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >
 
    <TextView
        android:id="@+id/textViewPromptSampler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/samplerconfig"
        android:textAppearance="?android:attr/textAppearanceLarge" />
 
    <EditText
        android:id="@+id/editTextPromptSamplerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title">
        <requestFocus />
 
    </EditText>        
        
    <EditText
        android:id="@+id/editTextPromptSamplerCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Command"/>
    
    <EditText
        android:id="@+id/editTextPromptSamplerParams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Params"/>
    
    <EditText
        android:id="@+id/editTextPromptSamplerMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Method"/>    
 
</LinearLayout>