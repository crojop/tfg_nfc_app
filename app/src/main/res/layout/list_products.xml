<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="6dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/div_1"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/addToCart"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:src="@drawable/add_cart_32" />

        <TextView
            android:id="@+id/numberProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addToCart"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:textSize="14dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/div_1"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewProduct"
            android:paddingLeft="12dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/div_1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/textViewName"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:textSize="14dip"
                android:fontFamily="sans-serif"
                android:layout_marginRight="26dp"
                android:paddingRight="26dp"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/textViewSku"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewName"
                android:paddingLeft="12dp"
                android:textSize="14dip"
                android:fontFamily="sans-serif"
                android:layout_marginRight="26dp"
                android:paddingRight="26dp"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSku"
                android:textColor="#546e7a"
                android:textSize="12dip"
                android:paddingLeft="12dp"
                android:fontFamily="sans-serif"
                android:layout_marginRight="26dp"
                android:paddingRight="26dp"
                android:textStyle="normal">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/removeCart"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/remove_cart_32">
    </ImageView>
</RelativeLayout>