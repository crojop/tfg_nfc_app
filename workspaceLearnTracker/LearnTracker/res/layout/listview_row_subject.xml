<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutRowSubject"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false">
    
    <ImageView
        android:id="@+id/ivSubjectIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/start_50x"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        >
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="false" 
        android:focusable="false">

        <TextView
            android:id="@+id/tvSubjectLevel1"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="18sp"
            android:clickable="false" 
            android:focusable="false"/>

        <TextView
            android:id="@+id/tvSubjectLevel2"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textColor="#666666"
            android:gravity="left"
            android:textSize="16sp" 
            android:clickable="false"
            android:focusable="false"/>
        
        
        <TextView
            android:id="@+id/tvSubjectLevel3"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:textColor="#cc510e"
            android:gravity="left"
            android:textSize="14sp" 
            android:clickable="false"
            android:focusable="false"/>        

    </LinearLayout>    

</LinearLayout>